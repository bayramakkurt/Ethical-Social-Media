---
// Base Layout
const { title } = Astro.props;
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - SocialApp</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
        min-height: 100vh;
        color: #ffffff;
        overflow-x: hidden;
      }
      
      .container {
        max-width: 100%;
        height: 100vh;
        margin: 0;
        padding: 0;
      }
      
      .card {
        background: #2a2a2a;
        border-radius: 20px;
        padding: 0;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
        margin: 0;
        border: 1px solid rgba(255, 255, 255, 0.05);
        overflow: hidden;
      }
      
      .btn {
        padding: 16px 32px;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        font-family: inherit;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      
      .btn-primary {
        background: linear-gradient(135deg, #FE3C72 0%, #FF6036 100%);
        color: white;
        box-shadow: 0 8px 20px rgba(254, 60, 114, 0.4);
      }
      
      .btn-primary:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 30px rgba(254, 60, 114, 0.6);
      }
      
      .btn-secondary {
        background: #3a3a3a;
        color: white;
        border: 2px solid #4a4a4a;
      }
      
      .btn-secondary:hover {
        background: #4a4a4a;
        transform: scale(1.05);
      }
      
      .btn-danger {
        background: transparent;
        color: #FE3C72;
        border: 2px solid #FE3C72;
      }
      
      .btn-danger:hover {
        background: #FE3C72;
        color: white;
        transform: scale(1.05);
      }
      
      .input {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid #3a3a3a;
        border-radius: 12px;
        font-size: 16px;
        font-family: inherit;
        transition: all 0.2s ease;
        background: #2a2a2a;
        color: white;
      }
      
      .input:focus {
        outline: none;
        border-color: #FE3C72;
        background: #333;
        box-shadow: 0 0 0 3px rgba(254, 60, 114, 0.2);
      }
      
      .input::placeholder {
        color: #8a8a8a;
      }
      
      .error {
        color: #FE3C72;
        font-size: 14px;
        margin-top: 12px;
        padding: 16px 20px;
        background: rgba(254, 60, 114, 0.15);
        border-radius: 12px;
        border: 1px solid rgba(254, 60, 114, 0.3);
      }
      
      .success {
        color: #01DF8A;
        font-size: 14px;
        margin-top: 12px;
        padding: 16px 20px;
        background: rgba(1, 223, 138, 0.15);
        border-radius: 12px;
        border: 1px solid rgba(1, 223, 138, 0.3);
      }
      
      .loading {
        display: inline-block;
        width: 24px;
        height: 24px;
        border: 3px solid rgba(254, 60, 114, 0.3);
        border-top: 3px solid #FE3C72;
        border-radius: 50%;
        animation: spin 0.6s linear infinite;
      }
      
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      
      .navbar {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: #1a1a1a;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        height: 70px;
        display: flex;
        align-items: center;
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.5);
      }
      
      .navbar-content {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        align-items: center;
        justify-content: space-around;
        height: 100%;
      }
      
      .navbar-brand {
        font-size: 28px;
        font-weight: 800;
        color: #FE3C72;
        text-decoration: none;
        letter-spacing: -1px;
      }
      
      .navbar-links {
        display: flex;
        gap: 0;
        align-items: center;
        width: 100%;
        justify-content: space-around;
      }
      
      .nav-link {
        text-decoration: none;
        color: #8a8a8a;
        font-weight: 600;
        font-size: 24px;
        padding: 10px;
        border-radius: 50%;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
      }
      
      .nav-link:hover, .nav-link.active {
        color: #FE3C72;
        transform: scale(1.1);
      }
      
      .avatar {
        width: 46px;
        height: 46px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #FE3C72;
      }
      
      @media (min-width: 768px) {
        .navbar {
          top: 0;
          bottom: auto;
          height: 80px;
          border-top: none;
          border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .navbar-content {
          max-width: 1200px;
          justify-content: space-between;
        }
        
        .navbar-links {
          width: auto;
          gap: 40px;
        }
        
        .nav-link {
          width: auto;
          height: auto;
          padding: 12px 24px;
          border-radius: 50px;
          font-size: 16px;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
